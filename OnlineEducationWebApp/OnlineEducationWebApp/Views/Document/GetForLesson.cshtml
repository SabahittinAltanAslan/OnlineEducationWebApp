@{
    ViewData["Title"] = "GetForLesson";
    Layout = "~/Views/Shared/_TeacherLayout.cshtml";
}

@model IEnumerable<OnlineEducationWebApp.Data.Entities.Document>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Documents for Lesson</title>
    <link href="~/twitter-bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/sweetalert2/sweetalert2.min.css" rel="stylesheet" />
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
</head>
<body>
    <div class="container mt-5">
        <center>
            <h2>Documents for Lesson</h2>
            <button class="btn btn-primary mb-3" onclick="window.location.href='@Url.Action("Create", "Document", new { lessonId = ViewBag.LessonId })'">Add Document</button>
        </center>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th>File Path</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var document in Model)
                {
                    <tr>
                        <td>@document.FileName</td>
                        <td>@document.Description</td>
                        <td>@document.FilePath</td>
                        <td>
                            <button class="btn btn-danger" onclick="confirmDelete(@document.Id)">Delete</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <script src="~/jquery/jquery.min.js"></script>
    <script src="~/sweetalert2/sweetalert2.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script>
        function confirmDelete(id) {
            Swal.fire({
                title: 'Are you sure?',
                text: 'Do you want to delete this document?',
                icon: 'warning',
                showDenyButton: true,
                confirmButtonText: 'Yes',
                denyButtonText: 'No'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: '/Document/Delete/' + id,
                        type: 'DELETE',
                        success: function (response) {
                            location.reload(); // Reload the page after delete
                        }
                    });
                } else if (result.isDenied) {
                    Swal.fire("Cancelled", "Delete action was cancelled", "info");
                }
            });
        }
    </script>
</body>
</html>
