@{
    ViewData["Title"] = "GetForStudent";
    Layout = "~/Views/Shared/_StudentLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Lessons</title>
    <link href="~/twitter-bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/sweetalert2/sweetalert2.min.css" rel="stylesheet" />
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
</head>
<body>
    <div class="container mt-5">
        <center>
            <h2>All Lessons</h2>
        </center>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>URL</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var lesson in Model)
                {
                    <tr>
                        <td>@lesson.Name</td>
                        <td>@lesson.Url</td>
                        <td>
                            <form action="@Url.Action("SubscribeToLesson", "StudentLesson")" method="post">
                                <input type="hidden" name="lessonId" value="@lesson.Id" />
                                <input type="hidden" name="studentId" value="1" /> <!-- SELMAN VİEWBAG İLE YERLEŞTİRMEYİ UNUTMA LOGİNDE ALDIĞIN ID DEĞERİNİ-->
                                <button type="submit" class="btn btn-warning">Get Lesson</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <script src="~/jquery/jquery.min.js"></script>
    <script src="~/sweetalert2/sweetalert2.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
</body>
</html>
