
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_TeacherLayout.cshtml";
}

@model OnlineEducationWebApp.Data.Entities.Student
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Student</title>
    <link href="~/twitter-bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/sweetalert2/sweetalert2.min.css" rel="stylesheet" />
    <link href="~/sweetalert2/sweetalert2.css" rel="stylesheet" />
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">

</head>
<body>
    <div class="container mt-5">
        <h2>Create Student</h2>
        <form method="post" action="@Url.Action("Create", "Student")" onsubmit="return confirmCreate()">
            <div class="form-group">
                <label for="Name">Name</label>
                <input type="text" class="form-control" id="Name" name="Name" required>
            </div>
            <div class="form-group">
                <label for="Surname">Surname</label>
                <input type="text" class="form-control" id="Surname" name="Surname" required>
            </div>
            <div class="form-group">
                <label for="SchNumber">School Number</label>
                <input type="text" class="form-control" id="SchNumber" name="SchNumber" required>
            </div>
            <div class="form-group">
                <label for="BirthDay">Birthday</label>
                <input type="date" class="form-control" id="BirthDay" name="BirthDay" required>
            </div>
            <button type="submit" class="btn btn-primary">Save</button>
        </form>
    </div>
    <script src="~/jquery/jquery.min.js"></script>
    <script src="~/sweetalert2/sweetalert2.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script>
        function confirmCreate() {
            return swal({
                title: "Are you sure?",
                text: "Do you want to add this student?",
                icon: "info",
                buttons: true,
            }).then((willAdd) => {
                if (willAdd) {
                    return true;
                } else {
                    return false;
                }
            });
        }
    </script>
</body>
</html>


